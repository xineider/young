<form method="POST" action="" data-link="/sistema/documentos/pesquisar/">
  <div class="row caixa_pesquisa">
    <ul class="collapsible" data-collapsible="accordion">
      <li>
        <div class="collapsible-header">
          Caixa de Pesquisa
        </div>
        <div class="collapsible-body row">
          <div class="col s12 m4 input-field">
            <label>
              Arquivo
            </label>
            <input type="text" name="arquivo" class="pesquisa">
          </div>
          <div class="col s12 m4 select-field">
            <label>
              Tipo
            </label>
            <select class="browser-default pesquisa" name="tipo">
              <option value="" selected>Selecione</option>
              <option value="1">Pasta</option>
              <option value="2">Documento</option>
            </select>
          </div>
          <div class="col s12 m4 select-field">
            <label>
              Onde
            </label>
            <select class="browser-default pesquisa" name="onde">
              <option value="" selected>Selecione</option>
              <option value="1">Tarefas</option>
              <option value="2">Documentos</option>
            </select>
          </div>
        </div>
      </li>
    </ul>
  </div>
</form>