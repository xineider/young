<div class="col s12 card white">
	<div class="close_container_load">
		<a class="btn btn-floating btn-medium blue darken-2 tooltipped" data-position="left" data-tooltip="Clique aqui para ocultar este bloco">
			<i class="fa fa-angle-double-up" aria-hidden="true"></i>  
		</a>
	</div>

	<div class="input-field input-group-control col s12 m4">
		<label for="nome_compromisso">Nome</label>
		<input class="validate" type="text" name="nome_compromisso">
	</div>

	<div class="select-field input-group-control col s12 m4">
		<label>Tipo do Compromisso</label>
		<select class="browser-default validate" name='tipo_compromisso'>
			<option value='0' selected>Acórdão/Setença</option>
			<option value='1'>Despacho/Decisões</option>
			<option value='2'>Petições Diversas</option>
			<option value='3'>Quesitos</option>
			<option value='4'>Manif de Docs</option>
			<option value='5'>Prazos Processos Físicos</option>
			<option value='6'>Perito</option>
		</select>

	</div>

	<div class="input-field input-group-control col s12 m4">
		<label>Data Inicial do Compromisso</label>
		<input type="text" class="datepicker" name="data_inicial_compromisso">
	</div>
	<div class="input-field input-group-control col s12 m4">
		<label>Horário Inicial do Compromisso</label>
		<input type="text" class="timepicker" name="hora_inicial_compromisso">
	</div>

	<div class="input-field input-group-control col s12 m4">
		<label>Data Final do Compromisso</label>
		<input type="text" class="datepicker" name="data_final_compromisso">
	</div>

	<div class="input-field input-group-control col s12 m4">
		<label>Horário Final do Compromisso</label>
		<input type="text" class="timepicker" name="hora_final_compromisso">
	</div>


	<div class="input-field input-group-control-with-search col s12 m4">
		<label for="desc_advogado_setor">Advogado Responsável do Setor</label>
		<input disabled value="<%= data.detalhes_processo[0].advogado %>" id="desc_advogado_setor" type="text">
		<a class="btn cocoa modal-mount-anchor-advogado-setor-compromisso" data-link="/processos/selecionar-todos-advogados-do-setor-compromisso" data-modal="#modalinfo" data-anchor-id="#id_advogado_setor" data-anchor-descricao="#desc_advogado_setor" data-anchor-advogado-compromisso="#desc_advogado_compromisso" data-anchor-id-advogado-compromisso="#id_advogado_compromisso">
			<i class="fa fa-search"></i>
		</a>
		<input type="hidden" name="id_advogado_setor" id="id_advogado_setor" value="<%= data.detalhes_processo[0].id_advogado %>">
	</div>

	<div class="input-field input-group-control-with-search col s12 m4">
		<label for="desc_advogado_compromisso">Advogado do Compromisso</label>
		<input disabled value="<%= data.detalhes_processo[0].advogado %>" id="desc_advogado_compromisso" type="text">
		<a class="btn cocoa modal-mount-anchor-id" data-link="/processos/selecionar-todos-advogados" data-href="#modalinfo" data-anchor-id="#id_advogado_compromisso" data-anchor-descricao="#desc_advogado_compromisso">
			<i class="fa fa-search"></i>
		</a>
		<input type="hidden" name="id_advogado_compromisso" id="id_advogado_compromisso" value="<%= data.detalhes_processo[0].id_advogado %>">
	</div>

	<div class="input-field input-group-control-with-search col s12 m4">
		<label for="desc_comarca_compromisso">Comarca</label>
		<input disabled value="" type="text" id="desc_comarca_compromisso">
		<a class="btn cocoa modal-mount-anchor-id" data-link="/processos/selecionar-todos-comarca" data-href="#modalinfo" data-anchor-id="#id_comarca_compromisso" data-anchor-descricao="#desc_comarca_compromisso">
			<i class="fa fa-search"></i>
		</a>
		<input type="hidden" name="id_comarca_compromisso" id="id_comarca_compromisso">
	</div>


	<div class="input-field input-group-control col s12">
		<label for="local_compromisso">Local</label>
		<input type="text" name="local_compromisso">
	</div>


	<div class="input-field input-group-control col s12">
		<label for="complemento_compromisso">Complemento</label>
		<textarea name="complemento_compromisso"></textarea>
	</div>

	<div class="input-field col s12 margin-b-1rem" >

		<button data-href="<%= data.cadastrar_link %>" class="btn waves-effect waves-light bordo ajax-submit" data-action="/sistema/processos/abrir/<%= data.detalhes_processo[0].id %>">
			Salvar Novo Compromisso 
		</button>
	</div>
</div>