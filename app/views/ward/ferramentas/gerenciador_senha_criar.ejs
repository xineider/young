<div class="card-panel white">
	<h4>Criar Lembrete de Senha</h4>
  <form method="POST" action="" enctype="multipart/form-data">
    <div class="right-align">
      <a href="/sistema/ferramentas/" class="btn-floating btn-large waves-effect waves-light blue darken-2 left ajax-load"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
      <button data-href="/sistema/ferramentas/gerenciador/senhas/cadastrar" data-action="/sistema/ferramentas/" class="btn-floating btn-large waves-effect waves-light blue darken-2 ajax-submit">
        <i class="fa fa-floppy-o" aria-hidden="true"></i>
      </button>
    </div>
    <div class="row">
      <div class="input-field col s12 m4">
        <input required="true" class="validate" type="text" name="nome">
        <label for="nome">Nome</label>
      </div>
      <div class="input-field col s12 m4">
        <input required="true" class="validate" type="text" name="login">
        <label for="login">Login</label>
      </div>
      <div class="input-field col s12 m4">
        <input required="true" class="validate" type="text" name="senha">
        <label for="senha">Senha</label>
      </div>
      <div class="input-field col s12">
        <input class="validate" type="text" name="link">
        <label for="link">Link</label>
      </div>
    </div>
    <div class="right-align">
      <button data-href="/sistema/ferramentas/gerenciador/senhas/cadastrar" data-action="/sistema/ferramentas/" class="btn waves-effect waves-light blue darken-2 ajax-submit">
        Salvar <i class="fa fa-floppy-o" aria-hidden="true"></i>
      </button>
    </div>
  </form>
</div>
